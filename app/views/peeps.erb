<% if current_user %>
  <form action = 'logout' method = 'post'>
    <button type = 'submit'>log out</button>
  </form>
<% else %>
  <form action = 'loginback' method = 'post'>
    <button type = 'submit'>log in</button>
  </form>
<% end %>

<% if current_user %>
  <form action = 'postpeep' method = 'post'>
    <input type = 'text' name = 'peep' required>
    <button type = 'submit'>post</button>
  </form>
<% end %>

<% @peeps.reverse.each do |peep| %>
  <li>
    <p>Published by: <%= peep.user_name %>
    <p>Published on: <%= peep.time %></p>
    <p class = 'peep' >Text: <%= peep.text %></p>
  </li>
<% end %>
</ul>
